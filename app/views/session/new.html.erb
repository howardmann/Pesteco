<h1>Login</h1>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, '', required: true, autofocus: true %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, '', required: true %>
  </p>
  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>

<p><%= link_to "Forgot password ?", new_password_reset_path %></p>
