<%= form_for([@building, @incident], :html => {:multipart => true}) do |f| %>
  <fieldset>
    <%= render "shared/errors", object: @incident %>

    <h3><%= @building.name %> pest sighting</h3>

    <p>
      <%= f.label 'Date of incident' %><br>
      <%= f.date_field :date_report, :autofocus => true, :required => true, min: Date.new(2017, 01, 01), max: Date.today %>
    </p>
    <p>
      <%= f.label 'Description of incident' %><br>
      <%= f.text_area :description, :required => true%>
    </p>

    <!-- ADMIN can respond to incidents -->
    <% if @current_user.admin %>
    <hr>
    <h3>Pesteco action</h3>
      <p>
        <%= f.label 'Date of response' %><br>
        <%= f.date_field :date_respond %>
      </p>
      <p>
        <%= f.label 'Action taken' %><br>
        <%= f.text_area :response %>
      </p>
      <p>
        <%= f.label 'Technician name' %><br>
        <%= f.text_field :technician %>
      </p>
    <% end %>


    <p>
      <%= f.submit %>
    </p>
  </fieldset>
<% end %>
