<%= form_for([@client, @user]) do |f| %>
  <fieldset>
    <%= render "shared/errors", object: @user %>
    <p>
      <%= f.label :email %><br>
      <%= f.email_field :email, :autofocus => true, :required => true %>
    </p>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, :required => true %>
    </p>
    <p>
      <%= f.label 'Mobile number (optional)' %><br>
      <%= f.text_field :mobile %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </fieldset>

<% end %>
