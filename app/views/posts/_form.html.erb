<%= form_for(@post, :html => {:multipart => true}) do |f| %>
  <fieldset>
    <%= render "shared/errors", object: @post %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, :autofocus => true, :required => true %>
    </p>
    <p>
      <%= f.label :date %><br>
      <%= f.date_field :date, :value => Date.today, :required => true %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, :id => 'trumbowyg-demo'%>
    </p>
    
    <p>
      <%= f.label :category %><br>
      <%= f.select :category, Post::CATEGORY, prompt: "Pick one" %>
    </p>
    <p>
      <%= f.label :attachments %><br>
      <%= f.file_field :attachments, :multiple => true %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </fieldset>
<% end %>
