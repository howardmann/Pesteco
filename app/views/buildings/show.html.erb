<h1><%= @building.name %></h1>
<p>Address: <%= @building.address %></p>
<p>
  <%= link_to 'Edit Building', edit_building_path(@building) %> |
  <%= link_to 'Delete Building', building_path(@building), :method => :delete, :data => {confirm: 'Are you sure?'} %>
</p>

<hr>

<h2>Reports:</h2>
<ul>
  <% @building.reports.order('date DESC').each do |report|  %>
    <li><%= report.date %> | <a href="<%= report.pdf %>" target="_blank">Pesteco Report</a></li>
  <% end %>
</ul>

<br>

<button>
  <%= link_to 'Add new report', new_building_report_path(@building) %>
</button>
