<%= form_for([@building, @report]) do |f| %>
  <fieldset>
    <p>
      <%= f.label 'Date of report' %><br>
      <%= f.date_field :date, :autofocus => true, :required => true %>
    </p>
    <p>
      <%= f.label 'PDF file upload' %><br>
      <%= f.cl_image_upload :pdf, :required => true %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </fieldset>
<% end %>
