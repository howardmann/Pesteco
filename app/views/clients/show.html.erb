<h1><%= @client.name %></h1>
<p>Head office: <%= @client.address %></p>

<% if @current_user && @current_user.admin %>
  <p>
    <%= link_to 'Edit Client', edit_client_path(@client) %> |
    <%= link_to 'Delete Client', client_path(@client), :method => :delete, :data => {confirm: 'Are you sure?'} %>
  </p>
<% end %>

<hr>

<h2>Buildings</h2>
<%= render 'shared/buildings', object: @client %>

<br>

<% if @current_user && @current_user.admin %>
  <button>
    <%= link_to 'Add new building', new_client_building_path(@client) %>
  </button>
<% end %>

<hr>

<h2>Authorized users</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Link</th>
  </tr>
  <% @client.users.each do |user| %>
  <tr>
    <td><%= user.name  %></td>
    <td><%= user.email %></td>
    <td><%= user.mobile %></td>
    <td>
      <% if @current_user == user || @current_user.admin%>
        <%= link_to 'Open', user_path(user) %>
      <% else %>
        <%= user.name  %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<br>

<button>
  <%= link_to 'Add new user', new_client_user_path(@client) %>
</button>
